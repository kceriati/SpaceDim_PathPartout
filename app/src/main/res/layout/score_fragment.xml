<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/score_bg"
        tools:context=".screens.game.ScoreFragment">

        <soup.neumorphism.NeumorphButton
            android:id="@+id/backtolobby"
            style="@style/Widget.Neumorph.ImageButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:text="\n \n back to lobby"
            android:layout_marginBottom="4dp"
            android:textAlignment="center"
            android:src="@drawable/icon_fuse"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:neumorph_shadowColorLight="@color/white"
            app:neumorph_shapeType="flat"
            tools:ignore="MissingConstraints"></soup.neumorphism.NeumorphButton>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cockpitTop">

            <LinearLayout
                android:id="@+id/scoreList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>